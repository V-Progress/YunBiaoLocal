<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 选中状态 -->
    <item android:state_checked="true">
        <layer-list>
            <item android:top="2dp" android:left="2dp" android:bottom="2dp" android:right="-4dp">
                <shape>
                    <solid android:color="@color/menu_bottom_num"/>
                    <stroke android:width="3dp" android:color="@color/menu_bottom_num"/>
                    <corners
                        android:topLeftRadius="20dp"
                        android:bottomLeftRadius="20dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- 普通状态40c249 -->
    <item >
        <layer-list >
            <item android:top="2dp" android:left="2dp" android:bottom="2dp" android:right="-4dp">
                <shape>
                    <solid android:color="@color/light_gray"/>
                    <stroke android:width="3dp" android:color="@color/menu_bottom_num"/>
                    <corners
                        android:topLeftRadius="20dp"
                        android:bottomLeftRadius="20dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>