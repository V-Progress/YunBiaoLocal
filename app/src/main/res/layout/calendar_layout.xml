<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_cal_weather_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@mipmap/bg_sunny"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_cal_time_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:text="00"
        android:textColor="#fff"
        android:textSize="80dp" />

    <TextView
        android:id="@+id/tv_cal_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/tv_cal_time_hour"
        android:text=":"
        android:textColor="#fff"
        android:textSize="80dp" />

    <TextView
        android:id="@+id/tv_cal_time_minute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/tv_cal_time"
        android:text="00"
        android:textColor="#fff"
        android:textSize="80dp" />

    <TextView
        android:id="@+id/tv_cal_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_cal_time"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:text="1月1日  周一"
        android:textColor="#fff"
        android:textSize="35dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_cal_location"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/location" />

        <TextView
            android:id="@+id/tv_cal_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="城市"
            android:textColor="#fff"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/tv_cal_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="天气"
            android:textColor="#fff"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/iv_cal_weather"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="8dp"
            android:scaleType="fitXY"
            android:src="@mipmap/sun" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_cal_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_cal_date"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:text=""
        android:textColor="#fff"
        android:textSize="35dp" />

</RelativeLayout>